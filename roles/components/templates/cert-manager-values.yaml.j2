installCRDs: true

replicaCount: 2

extraArgs:
  - --dns01-recursive-nameservers=8.8.8.8:53,1.1.1.1:53
  - --dns01-recursive-nameservers-only

prometheus:
  enabled: true
  servicemonitor:
    enabled: true

resources:
  requests:
    cpu: 100m
    memory: 128Mi
  limits:
    cpu: 200m
    memory: 256Mi

securityContext:
  enabled: true
  fsGroup: 1001
